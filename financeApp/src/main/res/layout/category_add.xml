<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_add"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp" >

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name" >
    </TextView>

    <EditText
        android:id="@+id/EditCategoryName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/TextView01"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/TextView01"
        android:inputType="text" >
    </EditText>

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditCategoryName"
        android:text="Note" >
    </TextView>

    <EditText
        android:id="@+id/EditCategoryNote"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/TextView02"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/TextView01"
        android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine|textAutoComplete" >
    </EditText>

</RelativeLayout>